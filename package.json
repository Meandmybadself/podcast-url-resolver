{
  "name": "episodes-api",
  "version": "1.0.0",
  "description": "API service for episodes.fm",
  "author": "Jeffery Bennett <hello@episodes.fm>",
  "engines": {
    "node": "16"
  },
  "license": "ISC",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "dev:tests": "nodemon --config nodemon.json src/tests/index.ts",
    "lint:all": "npm run lint:xo && npm run lint:tsc",
    "lint:tsc": "tsc --noEmit",
    "lint:xo": "xo --fix",
    "start": "node dist/index.js",
    "heroku-postbuild": "tsc -p tsconfig.production.json && npm run copy:files",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "kill:debugger": "kill -9 $(lsof -t -i tcp:9229)",
    "test": "jest",
    "test:startup": "PREPUSH_CHECK=1 ts-node src/index.ts",
    "copy:files": "cp -R src/public dist/",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sentry/node": "^6.17.6",
    "@sentry/tracing": "^6.17.6",
    "@types/cheerio": "^0.22.31",
    "axios": "^0.25.0",
    "body-parser": "^1.19.1",
    "cheerio": "*",
    "csv-write-stream": "^2.0.0",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "html-entities": "^2.3.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "node-podcast-parser": "^2.3.0",
    "normalize-url": "^6.1.0",
    "pg": "^8.7.3",
    "podcast-index-api": "^1.1.9",
    "qs": "^6.10.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.16.1",
    "sequelize-typescript": "^2.1.3",
    "strong-error-handler": "^4.0.0",
    "winston": "^3.5.1",
    "winston-slack-webhook-transport": "^2.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.17",
    "@types/sequelize": "^4.28.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "xo": "^0.48.0"
  },
  "xo": {
    "ignores": [
      "src/public/static/**/*"
    ],
    "rules": {
      "@typescript-eslint/dot-notation": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "no-unsafe-argument": 0,
      "default-case": 0,
      "max-depth": 0,
      "new-cap": 0,
      "no-case-declarations": 0,
      "no-new": 0,
      "promise/prefer-await-to-then": 0,
      "unicorn/no-array-for-each": 0
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write .",
    "*.js": "eslint --cache --fix"
  }
}
