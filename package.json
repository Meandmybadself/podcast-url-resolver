{
  "name": "episodes-api",
  "version": "1.0.0",
  "description": "API service for episodes.fm",
  "author": "Jeffery Bennett <hello@episodes.fm>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "serverless-http": "^2.7.0"
  },
  "scripts": {
    "lint:all": "npm run lint:xo && npm run lint:tsc",
    "lint:tsc": "tsc",
    "lint:xo": "xo --fix",
    "dev": "serverless offline",
    "deploy": "serverless deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:all"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-xo": "^0.35.0",
    "eslint-config-xo-typescript": "^0.38.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "serverless-offline": "^6.9.0",
    "serverless-plugin-typescript": "^1.1.9",
    "typescript": "^4.2.3",
    "xo": "^0.38.2"
  },
  "xo": {},
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md}": "prettier --write"
  }
}
