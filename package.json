{
  "name": "episodes-api",
  "version": "1.0.0",
  "description": "API service for episodes.fm",
  "author": "Jeffery Bennett <hello@episodes.fm>",
  "engines": {
    "node": "14.15.4"
  },
  "license": "ISC",
  "scripts": {
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "lint:all": "npm run lint:xo && npm run lint:tsc",
    "lint:tsc": "tsc --noEmit",
    "lint:xo": "xo --fix",
    "start": "node dist/index.js",
    "postinstall": "tsc && npm run copy:files",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "kill:debugger": "kill -9 $(lsof -t -i tcp:9229)",
    "test:startup": "PREPUSH_CHECK=1 ts-node src/index.ts",
    "copy:files": "cp -R src/public dist/"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "node-podcast-parser": "^2.3.0",
    "normalize-url": "^6.0.0",
    "pg": "^8.5.1",
    "podcast-index-api": "^1.1.8",
    "qs": "^6.7.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "strong-error-handler": "^4.0.0",
    "winston": "^3.3.3",
    "winston-slack-webhook-transport": "^2.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-xo": "^0.35.0",
    "eslint-config-xo-typescript": "^0.38.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "xo": "^0.38.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:all",
      "pre-push": "npm run test:startup"
    }
  },
  "xo": {
    "ignores": [
      "src/public/static/**/*"
    ],
    "rules": {
      "no-new": 0,
      "new-cap": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/dot-notation": 0,
      "max-depth": 0,
      "promise/prefer-await-to-then": 0,
      "no-case-declarations": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "unicorn/no-array-for-each": 0
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  }
}
